def verificar_primo():
    """
    Função que solicita um número inteiro e verifica se ele é primo.
    """
    numero = int(input("Digite um número inteiro: "))
    if numero < 2:
        print(f"{numero} não é primo.")
        return

    for i in range(2, int(numero ** 0.5) + 1):
        if numero % i == 0:
            print(f"{numero} não é primo.")
            return

    print(f"{numero} é primo.")

# Exemplo de uso:
verificar_primo()